{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Locations of bike racks in the city of Bala",
  "width": 600,
  "height": 700,
  "background": "grey",
  "title": {"text":"Ballarat Bike Rack Locations", "color": "white", "fontSize":25},

  "layer": [
    {
      "data": {
        "url": "./ballarat_small.json",
        "format": {"type": "topojson", "feature": "suburb-10-vic"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black"
      },
      "projection": {"type":"mercator"}
    
    },
    {
        "data":{"url": "./bike-racks.csv"},
        "mark": {"type":"point", "size": 100, "color":"red"},
        "encoding": {
            "longitude":{"field":"Lon", "type": "quantitative"}, 
            "latitude":{"field":"Lat", "type": "quantitative"}
        }
    }
    ]
}