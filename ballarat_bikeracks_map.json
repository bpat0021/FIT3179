{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Locations of bike racks in the city of Ballarat",
  "width": 300,
  "height": 400,
  "background": "white",
  "title": {"text":"Ballarat Bike Rack Locations", "color": "black", "fontSize":18, "fontWeight":100},

  "layer": [
    {
      "data": {
        "url": "./ballarat_small.json",
        "format": {"type": "topojson", "feature": "suburb-10-vic"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black"
      },
      "projection": {"type":"mercator"}
    
    },
    {
        "data":{"url": "./ballarat-bike-racks.csv"},
        "mark": {"type":"point", "size": 50, "color":"red"},
        "encoding": {
            "longitude":{"field":"Lon", "type": "quantitative"}, 
            "latitude":{"field":"Lat", "type": "quantitative"}
        }
    }
    ]
}